---
import { Image } from "astro:assets";

// Importamos las imágenes desde la carpeta assets
// Verifica que los nombres de archivo coincidan (mayúsculas/minúsculas)
import esenciaImg from "../assets/Escencia.jpg";
import conexionImg from "../assets/Conexion.jpg";
import almaImg from "../assets/Alma.jpg";
import miniSesionImg from "../assets/MiniSesion.jpg";
---

<section class="py-24 bg-white transition-colors duration-500">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    <div class="text-center mb-20 reveal-element">
      <span
        class="block text-xs font-bold tracking-[0.25em] text-primary uppercase mb-3"
        >Inversión</span
      >
      <h2
        class="text-3xl md:text-5xl font-display text-gray-900 uppercase tracking-widest"
      >
        Paquetes & Servicios
      </h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <div
        class="flex flex-col items-center text-center group cursor-pointer reveal-element delay-100"
      >
        <div
          class="w-full aspect-square overflow-hidden mb-6 bg-gray-100 relative"
        >
          <Image
            src={esenciaImg}
            alt="Detalle minimalista"
            width={500}
            class="w-full h-full object-cover image-hover-zoom transition-all duration-[1.2s] ease-out md:grayscale md:group-hover:grayscale-0"
          />
          <div
            class="absolute inset-0 bg-black/0 group-hover:bg-white/10 transition-colors duration-500"
          >
          </div>
        </div>
        <div class="hover-float w-full flex flex-col items-center">
          <h3
            class="text-2xl font-display text-gray-900 tracking-wider mb-2 transition-colors duration-300 group-hover:text-primary"
          >
            ESENCIA
          </h3>
          <div
            class="w-8 h-[1px] bg-primary mb-4 transition-all duration-300 group-hover:w-16"
          >
          </div>
          <p class="text-xs uppercase tracking-widest text-gray-500 mb-1">
            Desde
          </p>
          <p
            class="text-lg font-serif italic text-gray-800 group-hover:text-primary transition-colors duration-300"
          >
            $4,500 MXN
          </p>
        </div>
      </div>

      <div
        class="flex flex-col items-center text-center group cursor-pointer reveal-element delay-200"
      >
        <div
          class="w-full aspect-square overflow-hidden mb-6 bg-gray-100 relative"
        >
          <Image
            src={conexionImg}
            alt="Pareja abrazada"
            width={500}
            class="w-full h-full object-cover image-hover-zoom transition-all duration-[1.2s] ease-out md:grayscale md:group-hover:grayscale-0"
          />
          <div
            class="absolute inset-0 bg-black/0 group-hover:bg-white/10 transition-colors duration-500"
          >
          </div>
        </div>
        <div class="hover-float w-full flex flex-col items-center">
          <h3
            class="text-2xl font-display text-gray-900 tracking-wider mb-2 transition-colors duration-300 group-hover:text-primary"
          >
            CONEXIÓN
          </h3>
          <div
            class="w-8 h-[1px] bg-primary mb-4 transition-all duration-300 group-hover:w-16"
          >
          </div>
          <p class="text-xs uppercase tracking-widest text-gray-500 mb-1">
            Desde
          </p>
          <p
            class="text-lg font-serif italic text-gray-800 group-hover:text-primary transition-colors duration-300"
          >
            $8,200 MXN
          </p>
        </div>
      </div>

      <div
        class="flex flex-col items-center text-center group cursor-pointer reveal-element delay-300"
      >
        <div
          class="w-full aspect-square overflow-hidden mb-6 bg-gray-100 relative"
        >
          <Image
            src={almaImg}
            alt="Retrato emotivo"
            width={500}
            class="w-full h-full object-cover image-hover-zoom transition-all duration-[1.2s] ease-out md:grayscale md:group-hover:grayscale-0"
          />
          <div
            class="absolute inset-0 bg-black/0 group-hover:bg-white/10 transition-colors duration-500"
          >
          </div>
        </div>
        <div class="hover-float w-full flex flex-col items-center">
          <h3
            class="text-2xl font-display text-gray-900 tracking-wider mb-2 transition-colors duration-300 group-hover:text-primary"
          >
            ALMA
          </h3>
          <div
            class="w-8 h-[1px] bg-primary mb-4 transition-all duration-300 group-hover:w-16"
          >
          </div>
          <p class="text-xs uppercase tracking-widest text-gray-500 mb-1">
            Desde
          </p>
          <p
            class="text-lg font-serif italic text-gray-800 group-hover:text-primary transition-colors duration-300"
          >
            $12,500 MXN
          </p>
        </div>
      </div>

      <div
        class="flex flex-col items-center text-center group cursor-pointer reveal-element delay-400"
      >
        <div
          class="w-full aspect-square overflow-hidden mb-6 bg-gray-100 relative"
        >
          <Image
            src={miniSesionImg}
            alt="Sesión de estudio"
            width={500}
            class="w-full h-full object-cover image-hover-zoom transition-all duration-[1.2s] ease-out md:grayscale md:group-hover:grayscale-0"
          />
          <div
            class="absolute inset-0 bg-black/0 group-hover:bg-white/10 transition-colors duration-500"
          >
          </div>
        </div>
        <div class="hover-float w-full flex flex-col items-center">
          <h3
            class="text-2xl font-display text-gray-900 tracking-wider mb-2 transition-colors duration-300 group-hover:text-primary"
          >
            MINI SESIÓN
          </h3>
          <div
            class="w-8 h-[1px] bg-primary mb-4 transition-all duration-300 group-hover:w-16"
          >
          </div>
          <p class="text-xs uppercase tracking-widest text-gray-500 mb-1">
            Desde
          </p>
          <p
            class="text-lg font-serif italic text-gray-800 group-hover:text-primary transition-colors duration-300"
          >
            $2,500 MXN
          </p>
        </div>
      </div>
    </div>

    <div class="mt-20 text-center reveal-element delay-500">
      <a
        class="inline-block px-10 py-4 border border-gray-300 text-gray-900 text-xs font-bold tracking-[0.25em] uppercase hover:bg-gray-900 hover:text-white transition-all duration-300 btn-glow"
        href="#"
      >
        Ver Detalles Completos
      </a>
    </div>
  </div>
</section>
