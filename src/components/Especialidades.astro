---
import { Image } from "astro:assets";

// Importación de las imágenes (Asegúrate que los nombres coinciden EXACTAMENTE con tu carpeta assets)
import gastronomicaImg from "../assets/Gastronomica.jpg";
import bodasImg from "../assets/Bodas.jpg";
import retratoImg from "../assets/Retrato.jpg";
import xvAnosImg from "../assets/XVAÑOS.jpg";
import administrativaImg from "../assets/Administrativa.jpg";
